# EditorConfig: http://EditorConfig.org

# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
end_of_line = lf
insert_final_newline = true
charset = utf-8

# Matches multiple files with brace expansion notation
# Set default charset
[*.{js,py}]

# 4 space indentation
[*.{java,json,py,js}]
indent_style = space
indent_size = 4

# 2 space indentation
[*.{groovy,gradle,html,yml}]
indent_style = space
indent_size = 2
